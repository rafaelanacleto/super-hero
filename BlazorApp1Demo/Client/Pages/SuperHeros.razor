@page "/superhero"
@using BlazorApp1Demo.Shared
@inject HttpClient Http

<h1>Super Heros</h1>

@if (superHeroes == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Hero Name</th>             
                <th>Comic</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var hero in superHeroes)
            {
                <tr>
                    <td>@hero.Id</td>
                    <td>@hero.FirstName</td>
                    <td>@hero.LastName</td>
                    <td>@hero.HeroName</td>
                    <td>@hero.Comic?.Name</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
   private SuperHero[]? superHeroes;

    protected override async Task OnInitializedAsync()
    {
        superHeroes = await Http.GetFromJsonAsync<SuperHero[]>("SuperHero");
    }
}
